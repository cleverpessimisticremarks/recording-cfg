bind "o" "rec"

alias startrec "host_framerate 600; mirv_streams record fps 600; mirv_streams record screen enabled 1; mirv_streams record screen settings blur; mirv_streams record start ; alias rec stoprec"

alias rec "startrec"

alias stoprec "mirv_streams record end; host_framerate 0; demo_pause; alias rec startrec

engine_no_focus_sleep 0; snd_mute_losefocus 0;cl_clock_correction 0;mirv_fix playerAnimState 1	// delag

mirv_streams remove rec
mirv_streams settings remove blur

mirv_streams settings add ffmpeg mp4 "-c:v libx264 -pix_fmt yuv420p -preset ultrafast -crf 9 {QUOTE}{AFX_STREAM_PATH}\video.mp4{QUOTE}"
mirv_streams settings add sampler blur
mirv_streams settings edit blur settings mp4
mirv_streams settings edit blur strength 1
mirv_streams settings edit blur method rectangle
mirv_streams settings edit blur exposure .6  // blur amount (change to = <1 if you decide to change blur fps to 60 
mirv_streams settings edit blur fps 60  // video output fps

mirv_streams record name "D:\ffmpeg"
